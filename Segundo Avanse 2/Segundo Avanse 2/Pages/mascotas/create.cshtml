@model Pagina_web_mascotas.mascota

<h1>Agregar Nueva Mascota</h1>

<form method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Raza">Raza</label>
        <input asp-for="Raza" class="form-control" />
        <span asp-validation-for="Raza" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Edad">Edad</label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="RefugioId">Refugio</label>
        <select asp-for="refugioId" asp-items="ViewBag.Refugios" class="form-control"></select>
        <span asp-validation-for="refugioId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>